{
	"name": "mcp-course",
	"version": "1.0.0",
	"description": "Model Context Protocol (MCP) 完整實作課程",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "jest",
		"test:01": "jest --testPathPattern=01-hello-world",
		"test:02": "jest --testPathPattern=02-static-resources",
		"test:03": "jest --testPathPattern=03-basic-tools",
		"test:04": "jest --testPathPattern=04-dynamic-resources",
		"test:05": "jest --testPathPattern=05-complex-tools",
		"test:06": "jest --testPathPattern=06-prompt-templates",
		"test:07": "jest --testPathPattern=07-feature-integration",
		"test:08": "jest --testPathPattern=08-http-transport",
		"test:09": "jest --testPathPattern=09-dynamic-features",
		"test:10": "jest --testPathPattern=10-content-management",
		"test:11": "jest --testPathPattern=11-devtools-integration",
		"test:cumulative:01": "jest --testPathPattern=\"0[1]\"",
		"test:cumulative:02": "jest --testPathPattern=\"0[1-2]\"",
		"test:cumulative:03": "jest --testPathPattern=\"0[1-3]\"",
		"test:cumulative:04": "jest --testPathPattern=\"0[1-4]\"",
		"test:cumulative:05": "jest --testPathPattern=\"0[1-5]\"",
		"test:cumulative:06": "jest --testPathPattern=\"0[1-6]\"",
		"test:cumulative:07": "jest --testPathPattern=\"0[1-7]\"",
		"test:cumulative:08": "jest --testPathPattern=\"0[1-8]\"",
		"test:cumulative:09": "jest --testPathPattern=\"0[1-9]\"",
		"test:cumulative:10": "jest --testPathPattern=\"(0[1-9]|10)\"",
		"test:cumulative:11": "jest --testPathPattern=\"(0[1-9]|1[01])\"",
		"test:coverage": "jest --coverage",
		"test:performance": "jest tests/performance",
		"build:01": "tsc -p exercises/01-hello-world/tsconfig.json",
		"build:02": "tsc -p exercises/02-static-resources/tsconfig.json",
		"build:03": "tsc -p exercises/03-basic-tools/tsconfig.json",
		"build:04": "tsc -p exercises/04-dynamic-resources/tsconfig.json",
		"build:05": "tsc -p exercises/05-complex-tools/tsconfig.json",
		"build:06": "tsc -p exercises/06-prompt-templates/tsconfig.json",
		"build:07": "tsc -p exercises/07-feature-integration/tsconfig.json",
		"build:08": "tsc -p exercises/08-http-transport/tsconfig.json",
		"build:09": "tsc -p exercises/09-dynamic-features/tsconfig.json",
		"build:10": "tsc -p exercises/10-content-management/tsconfig.json",
		"build:11": "tsc -p exercises/11-devtools-integration/tsconfig.json",
		"dev:01": "npm run build:01 && node dist/exercises/01-hello-world/server.js",
		"dev:02": "npm run build:02 && node dist/exercises/02-static-resources/server.js",
		"dev:03": "npm run build:03 && node dist/exercises/03-basic-tools/server.js",
		"dev:04": "npm run build:04 && node dist/exercises/04-dynamic-resources/server.js",
		"dev:05": "npm run build:05 && node dist/exercises/05-complex-tools/server.js",
		"dev:06": "npm run build:06 && node dist/exercises/06-prompt-templates/server.js",
		"dev:07": "npm run build:07 && node dist/exercises/07-feature-integration/server.js",
		"dev:08": "npm run build:08 && node dist/exercises/08-http-transport/server.js",
		"dev:09": "npm run build:09 && node dist/exercises/09-dynamic-features/server.js",
		"dev:10": "npm run build:10 && node dist/exercises/10-content-management/server.js",
		"dev:11": "npm run build:11 && node dist/exercises/11-devtools-integration/server.js",
		"lint": "eslint . --ext .ts",
		"lint:fix": "eslint . --ext .ts --fix"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"typescript",
		"course",
		"learning"
	],
	"author": "MCP Course",
	"license": "MIT",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.0.0",
		"sqlite3": "^5.1.6",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@jest/globals": "^30.0.3",
		"@types/express": "^5.0.3",
		"@types/jest": "^29.0.0",
		"@types/node": "^20.0.0",
		"@types/sqlite3": "^3.1.11",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"eslint": "^8.0.0",
		"express": "^5.1.0",
		"jest": "^29.0.0",
		"ts-jest": "^29.0.0",
		"typescript": "^5.0.0"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
