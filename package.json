{
  "name": "mcp-course",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) 完整實作課程",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:01": "jest --testPathPattern=01-hello-world",
    "test:02": "jest --testPathPattern=02-static-resources",
    "test:03": "jest --testPathPattern=03-basic-tools",
    "test:04": "jest --testPathPattern=04-dynamic-resources",
    "test:05": "jest --testPathPattern=05-complex-tools",
    "test:06": "jest --testPathPattern=06-prompt-templates",
    "test:07": "jest --testPathPattern=07-feature-integration",
    "test:08": "jest --testPathPattern=08-http-transport",
    "test:09": "jest --testPathPattern=09-dynamic-features",
    "test:10": "jest --testPathPattern=10-production-app",
    "test:cumulative:01": "jest --testPathPattern=\"0[1]\"",
    "test:cumulative:02": "jest --testPathPattern=\"0[1-2]\"",
    "test:cumulative:03": "jest --testPathPattern=\"0[1-3]\"",
    "test:cumulative:04": "jest --testPathPattern=\"0[1-4]\"",
    "test:cumulative:05": "jest --testPathPattern=\"0[1-5]\"",
    "test:cumulative:06": "jest --testPathPattern=\"0[1-6]\"",
    "test:cumulative:07": "jest --testPathPattern=\"0[1-7]\"",
    "test:cumulative:08": "jest --testPathPattern=\"0[1-8]\"",
    "test:cumulative:09": "jest --testPathPattern=\"0[1-9]\"",
    "test:cumulative:10": "jest --testPathPattern=\"(0[1-9]|10)\"",
    "test:coverage": "jest --coverage",
    "test:performance": "jest tests/performance",
    "dev:01": "npm run build && node dist/exercises/01-hello-world/server.js",
    "dev:02": "npm run build && node dist/exercises/02-static-resources/server.js",
    "dev:03": "npm run build && node dist/exercises/03-basic-tools/server.js",
    "dev:04": "npm run build && node dist/exercises/04-dynamic-resources/server.js",
    "dev:05": "npm run build && node dist/exercises/05-complex-tools/server.js",
    "dev:06": "npm run build && node dist/exercises/06-prompt-templates/server.js",
    "dev:07": "npm run build && node dist/exercises/07-feature-integration/server.js",
    "dev:08": "npm run build && node dist/exercises/08-http-transport/server.js",
    "dev:09": "npm run build && node dist/exercises/09-dynamic-features/server.js",
    "dev:10": "npm run build && node dist/exercises/10-production-app/server.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "typescript",
    "course",
    "learning"
  ],
  "author": "MCP Course",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.3",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "express": "^5.1.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
